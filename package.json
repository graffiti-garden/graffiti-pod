{
  "name": "graffiti-pod",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.7",
    "@nestjs/core": "^10.3.7",
    "@nestjs/mongoose": "^10.0.5",
    "@nestjs/platform-fastify": "^10.3.7",
    "@noble/hashes": "^1.4.0",
    "@solid/access-token-verifier": "^2.1.0",
    "bittorrent-dht": "^11.0.5",
    "fast-json-patch": "^3.1.1",
    "mongoose": "^8.3.1"
  },
  "devDependencies": {
    "@inrupt/solid-client-authn-node": "^2.1.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/testing": "^10.3.7",
    "@types/jest": "^29.5.12",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
